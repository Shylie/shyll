name: shyll-compile-test

on:
  pull_request:
  push:
    branches:
      - master
      - develop
  schedule:
    - cron: '*/60 */8 * * *'
      
jobs:
  test:
    name: default
    runs-on: windows-latest
    strategy:
      fail-fast: false
    steps:
    - name: setup-msbuild
      uses: microsoft/setup-msbuild@v1
    - name: checkout-source
      uses: actions/checkout@v1
    - name: debug-compile-test
      shell: cmd
      run: |
        msbuild.exe shyll.sln /t:Build /p:Configuration=Debug;Platform=x64
    - name: release-compile-test
      shell: cmd
      run: |
        msbuild.exe shyll.sln /t:Build /p:Configuration=Release;Platform=x64
